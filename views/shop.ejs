  const hasWorkerNameRows = Boolean(entryOverview.hasWorkerRows);
  const topEntryList = Array.isArray(entryOverview.topEntries) ? entryOverview.topEntries : [];
  const overviewNavLabel = (t.shop && t.shop.nav && t.shop.nav.overview)
