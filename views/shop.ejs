            <p class="store-entry-summary">
              <span class="store-entry-summary__label"><%= entriesSummaryLabel %></span>
              <strong class="store-entry-summary__value"><%= entryOverview.totalCount || 0 %></strong>
              <span class="store-entry-summary__unit"><%= entriesSummaryUnit %></span>
