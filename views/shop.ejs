              <h3 class="store-entry-workers__title"><%= entriesWorkerListTitle %></h3>
              <% if (hasWorkerNameRows) { %>
                <ul class="store-entry-workers__list">
                  <% workerNameRows.forEach(function (row) { %>
                    <li class="store-entry-workers__item">
                      <% row.forEach(function (name) { %>
                        <span class="store-entry-workers__name"><%= name %></span>
                      <% }); %>
                    </li>
                  <% }); %>
                </ul>
              <% } else { %>
                <p class="store-entries__empty"><%= entriesEmptyText %></p>
              <% } %>
            </div>
            <div class="store-entry-top">
              <h3 class="store-entry-top__title"><%= entriesTopListTitle %></h3>
              <% if (topEntryList.length) { %>
                <ol class="store-entry-top__list">
                  <% topEntryList.forEach(function (item, index) { %>
                    <li class="store-entry-top__item">
                      <span class="store-entry-top__rank"><%= index + 1 %>.</span>
                      <span class="store-entry-top__name"><%= item.workerName %></span>
                      <span class="store-entry-top__score"><%= entriesTopListScoreLabel %> <strong><%= item.displayScore %></strong></span>
                    </li>
                  <% }); %>
                </ol>
              <% } else { %>
                <p class="store-entries__empty store-entry-top__empty"><%= entriesTopListEmptyText %></p>
              <% } %>
              <div class="store-entry-top__cta">
                <a
                  class="store-entry-top__cta-link"
                  href="https://open.kakao.com/o/gALpMlRg"
                  target="_blank"
                  rel="noopener"
                >
                  <span class="sr-only">클릭하고 강밤톡방 참여 – 강남의 밤 오픈채팅</span>
                  <img
                    class="store-entry-top__cta-image"
                    src="/images/promo/카카오톡.JPG"
                    alt="강밤톡방 참여 카카오톡 오픈채팅 안내 배너"
                    loading="lazy"
                  />
