              </div>
              <ul class="rate-table__list">
                <% (block.prices || []).forEach(function(item) { %>
                  <li>
                    <span class="rate-table__person"><%= item.label %></span>
                    <strong class="rate-table__amount"><%= item.amount %></strong>
                  </li>
                <% }) %>
              </ul>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
